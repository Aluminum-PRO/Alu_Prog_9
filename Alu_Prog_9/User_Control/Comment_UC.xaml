<UserControl x:Class="Alu_Prog_9.User_Control.Comment_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alu_Prog_9.User_Control"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="230">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65px"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock TextWrapping="Wrap" x:Name="User_Name_SurName" Text="Имя Фамилия" Foreground="White" FontSize="12" Margin="3 5 0 0"/>
            <TextBlock TextWrapping="Wrap" x:Name="Time_Send_Text_Block" Text="Время" Foreground="White" FontSize="12" Margin="3 0 0 5"/>
        </StackPanel>
        <TextBlock TextWrapping="Wrap" x:Name="CommentText" Text="Текст комментария 130 символов" Foreground="White" FontSize="14" Grid.Column="1" Margin="5" Width="125">

        </TextBlock>
    </Grid>
</UserControl>
