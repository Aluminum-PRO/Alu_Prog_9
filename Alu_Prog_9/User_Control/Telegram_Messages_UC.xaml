<UserControl x:Class="Alu_Prog_9.User_Control.Telegram_Messages_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alu_Prog_9.User_Control"
             mc:Ignorable="d">
    <Grid>
        <Border Background="Transparent" x:Name="Border" CornerRadius="8" BorderThickness="0.8" BorderBrush="#FF484848" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <TextBlock TextWrapping="Wrap" x:Name="Messages_Text" Text="Текст комментария 130 символов" Foreground="White" FontSize="14" Margin="5"/>
        </Border>
    </Grid>
</UserControl>
