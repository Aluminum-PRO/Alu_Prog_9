<Page x:Class="Alu_Prog_9.Pages.Store_Pages.Settings.Store_Settings_Errors_Page"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Alu_Prog_9.Pages.Store_Pages.Settings"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="770"
      Title="Store_Settings_Errors_Page">

    <Grid>
        <StackPanel>
            <TextBlock Text=" Если при работе программы у вас возникла ошибка, сообщите об этом разработчику нажав на кнопку ниже." FontSize="20" TextWrapping="Wrap" TextAlignment="Center" Foreground="White" Margin="10"/>
            <Button x:Name="Send_Errors_But" Content="Отправить отчёт об ошибках" Margin="10" HorizontalContentAlignment="Center" Style="{StaticResource MaterialDesignFlatLightButton}" Click="Send_Errors_But_Click"/>
        </StackPanel>
    </Grid>
</Page>
